{
  "_comment": "Vim-style keybindings for diff_review",
  "_notes": [
    "This config uses vim-inspired navigation and commands where sensible for a diff viewer.",
    "Key mappings:",
    "- ]c/[c: next/prev change (vim diff style)",
    "- ]b/[b: next/prev bookmark",
    "- gg/G: top/bottom of file",
    "- zz: center on region",
    "- zc/zC: collapse region/all",
    "- /: search (n/N for next/prev match)",
    "- m: toggle bookmark",
    "- w: switch between 'base' and 'modi' in diff viewer tabs",
    "- gt/gT: next/prev tab",
    "- ZQ: close tab (vim-style quit without save)"
  ],

  "keybindings": {
    "next_change": ["] c"],
    "prev_change": ["[ c"],
    "top_of_file": ["g g"],
    "bottom_of_file": ["Shift+g"],
    "toggle_bookmark": ["m"],
    "next_bookmark": ["] b"],
    "prev_bookmark": ["[ b"],
    "center_region": ["z z"],
    "collapse_region": ["z c"],
    "collapse_all": ["z Shift+c"],
    "search": ["/", "Ctrl+f"],
    "find_next": ["n"],
    "find_prev": ["Shift+n"],
    "reload": ["e"],
    "take_note": ["Ctrl+Shift+n"],
    "toggle_diff_map": ["Ctrl+Shift+h"],
    "toggle_line_numbers": ["Ctrl+Shift+l"],
    "toggle_tab_highlight": ["Ctrl+Shift+t"],
    "toggle_eol_highlight": ["Ctrl+Shift+e"],
    "toggle_sidebar": ["Ctrl+Shift+b"],
    "focus_next": ["w"],
    "shortcuts_help": ["F1", "Ctrl+Shift+?"],
    "close_tab": ["Shift+z Shift+q"],
    "next_tab": ["g t"],
    "prev_tab": ["g Shift+t"],
    "first_file": ["1 g t"],
    "last_file": ["9 g t"],
    "increase_font": ["Ctrl++", "Ctrl+="],
    "decrease_font": ["Ctrl+-"],
    "reset_font": ["Ctrl+0"]
  }
}
